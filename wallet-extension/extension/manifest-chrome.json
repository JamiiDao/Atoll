{
    "manifest_version": 3,
    "name": "Atoll Browser Wallet",
    "short_name": "Atoll Wallet",
    "description": "Spend or earn yield on Solana using your Bitcoin",
    "version": "0.1.0",
    "author": "@448-OG",
    "minimum_chrome_version": "110",
    "offline_enabled": false,
    "action": {
        "default_title": "Spend or earn yield on Solana using your Bitcoin",
        "default_icon": {
            "19": "assets/atoll-logo-19.png",
            "16": "assets/atoll-logo-16.png",
            "32": "assets/atoll-logo-32.png",
            "38": "assets/atoll-logo-38.png"
        },
        "default_popup": "pages/popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "webRequest"
    ],
    "host_permissions": [
        "*://*/"
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "js/wasm/atoll_wallet_webextension.js",
                "js/wasm/atoll_wallet_webextension_bg.wasm"
            ]
        }
    ]
}